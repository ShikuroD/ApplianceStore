@model RegisterViewModel
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Address</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="@Model.UserProfile.Address.StreetAddress"></label>
                <div class="form-group">
                    <input class="form-control" placeholder="Street address" asp-for="@Model.UserProfile.Address.StreetAddress"/>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.UserProfile.Address.Locality"></label>
                <div class="form-group">
                    <input class="form-control" placeholder="Locality/District" asp-for="@Model.UserProfile.Address.Locality"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="@Model.UserProfile.Address.City"></label>
                <div class="form-group">
                    <input class="form-control" placeholder="City" asp-for="@Model.UserProfile.Address.City"/>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.UserProfile.Address.Country"></label>
                <div class="form-group">
                    <input class="form-control" placeholder="Country" asp-for="@Model.UserProfile.Address.Country"/>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.UserProfile.Address.PostalCode"></label>
                <div class="form-group">
                    <input class="form-control" placeholder="Country" asp-for="@Model.UserProfile.Address.PostalCode"/>
                </div>
            </div>
        </div>    
    </div>
</div>
