@model IEnumerable<Order>

@{
    ViewData["Title"] = "Order List";
}
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Order</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <span>Order</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="hero" style="margin-top:110px">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <partial name="_MenuBar"/>
            </div>
            <div class="col-lg-9">
                <div class="card-body">
                    <h4>Order List</h4>
                    <table class="text-center table table-hover text-center">
                        <thead>
                            <th>@Html.DisplayNameFor(model => model.OrderId)</th>
                            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Total)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>Detail</th>
                        </thead>
                        <tbody>
                        @foreach (var order in Model){
                            <tr>
                                <td>@Html.DisplayFor(model => order.OrderId)</td>
                                <td><p>@order.OrderDate.ToString("dd/MM/yyyy")</p></td>
                                <td>@Html.DisplayFor(model => order.Total)</td>
                                <td>@order.Status
                                    
                                </td>
                                <td>
                                    <a style="cursor:pointer" class="show"><i id="icon_action" class="fa fa-arrow-left"></i></a>
                                    @* <a asp-action="Details" asp-route-orderId="@order.OrderId">Details</a> *@
                                </td>
                            </tr>
                            <table style="display:none" class="text-center table table-hover order_detail">
                                <thead>
                                    <th width="40%">@Html.DisplayNameFor(model => model.OrderItems[0].ItemName)</th>
                                    <th>@Html.DisplayNameFor(model => model.OrderItems[0].Units)</th>
                                    <th>@Html.DisplayNameFor(model => model.OrderItems[0].UnitPrice)</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </thead>
                                <tbody>
                                    @foreach(var item in order.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.ItemName</td>
                                            <td>@item.Units</td>
                                            <td>$@item.UnitPrice.ToString("N2")</td>
                                            <td>$@Math.Round(@item.Units * @item.UnitPrice,2)</td>
                                            <td>@item.Status</td>
                                        </tr>
                                    }
                                    
                                </tbody>
                            </table>
                        }
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</section>

@section Scripts{
    <script>
    $(document).ready(function(){
        $(document).on('click','.show',function(){
            $('.order_detail').show(600);
            html='';
            html+='<i class="fa fa-arrow-down"></i>';
            $('.show').html('').html(html);
            $('.show').addClass('close_order_detail');
        })
        $(document).on('click','.close_order_detail',function(){
            $('.order_detail').hide(600);
            html='';
            html+='<i class="fa fa-arrow-left"></i>';
            $('.show').html('').html(html);
            $('.show').removeClass('close_order_detail');
        })
    })
    </script>                            
}