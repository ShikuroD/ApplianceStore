@using MvcClient.Services
@using Microsoft.AspNetCore.Http
@inject IIdentityService<Buyer> identityService
@if (User.Identity.IsAuthenticated)
{
    <div class="col-sm-6 clearfix">
        <div class="user-profile pull-right">
            <img class="avatar user-thumb" src="assets/images/author/avatar.png" alt="avatar">
            <h4 class="user-name dropdown-toggle" data-toggle="dropdown">@User.Identity.Name <i class="fa fa-angle-down"></i></h4>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-action="Index" asp-controller="Item">Items</a>
                @if( User.IsInRole("Administrators") ){
                    <a class="dropdown-item" href="#">Users</a>
                }
                <a class="dropdown-item" href="#">Profile</a>
                <a class="dropdown-item" href="#">Settings</a>
                <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Log Out</a>
            </div>
        </div>
    </div>
}
else{
    <script type="text/javascript">
        $(function(){
            window.location.href = "@Url.Action("Index","Home")";
        });
    </script>
}