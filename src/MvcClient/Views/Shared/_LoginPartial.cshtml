@using MvcClient.Services
@inject IIdentityService<Buyer> identityService
<ul class="navbar-nav"> 
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a  class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownMenuLink"
            data-toggle="dropdown" aria-haspopup="true" arai-expanded="false">
            Hello @User.Identity.Name
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a asp-action="Index" asp-controller="Order" class="dropdown-item">Orders</a>
            <a asp-action="Logout" asp-controller="Account" class="dropdown-item">Logout</a>
        </div>
    </li>
    @await Component.InvokeAsync("Basket", new { user = identityService.Get(User) })
} 
else 
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="Privacy" asp-controller="Home">Login</a>
    </li>
}
</ul>
