@model IndexViewModel
@{
    ViewData["Title"] = "Ogani Shop";
    var selectList = new SelectList(Model.Categories);
}
<section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>All departments</span>
                        </div>
                        <ul>
                            @foreach(var item in Model.Categories){
                                <li><a asp-action="Index" asp-controller="Shop" asp-route-itemCategory="@item">@item</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form asp-action="Index" method="GET">
                            <div >
                                <select class="hero__search__categories"  asp-for="ItemCategory"  asp-items="@selectList">
                                    <option value="">All categories </option><span class="arrow_carrot-down"></span>
                                </select>
                                
                            </div>                   
                                
                                
                                <input type="text" asp-for="SearchString"  placeholder="What do yo u need?">

                                <button type="submit" value="Filter" class="site-btn">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+65 11.188.888</h5>
                                <span>support 24/7 time</span>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
</section>
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>@Model.item.Name</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <a asp-action="Index" asp-controller="Shop" asp-route-itemCategory="@Model.item.Category">@Model.item.Category</a>
                        <span id="item_name_@Model.item.Id">@Model.item.Name</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                            src="/img/product/details/details_@Model.item.PictureUrl" alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        <img data-imgbigurl="/img/product/details/details_@Model.item.PictureUrl"
                            src="/img/product/details/details_@Model.item.PictureUrl" alt="">
                        <img data-imgbigurl="/img/product/details/details_@Model.item.PictureUrl"
                            src="/img/product/details/details_@Model.item.PictureUrl" alt="">
                        <img data-imgbigurl="/img/product/details/details_@Model.item.PictureUrl"
                            src="/img/product/details/details_@Model.item.PictureUrl" alt="">
                        <img data-imgbigurl="/img/product/details/details_@Model.item.PictureUrl"
                            src="/img/product/details/details_@Model.item.PictureUrl" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.item.Name</h3>
                    @* <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 reviews)</span>
                    </div> *@
                    <div class="product__details__price">$@Model.item.UnitPrice</div>
                    <p>@Model.item.Description</p>
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input id="quantity_@Model.item.Id" type="number" disabled value="1">
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.item.CategoryId" id="item_category_id_@Model.item.Id">
                    <input type="hidden" value="@Model.item.PictureUrl" id="item_picture_uri_@Model.item.Id"/>
                    <input type="hidden" value="@Model.item.UnitPrice" id="item_price_@Model.item.Id">
                    <div style="cursor:pointer" class="primary-btn add_to_cart" id="@Model.item.Id">ADD TO CARD</div>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                    <span id="success_@Model.item.Id" style="display:none;margin-left:10px;color:#7fad39;"><i style="font-size:25px" class="fa fa-check"></i></span>
                    <ul>
                        <li><b>Availability</b> <span>In Stock</span></li>
                        @* <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                        <li><b>Weight</b> <span>0.5 kg</span></li>
                        <li><b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li> *@
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                aria-selected="true">Description</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                                aria-selected="false">Information</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                                aria-selected="false">Reviews <span>(1)</span></a>
                        </li> *@
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Products Description</h6>
                                <p>@Model.item.Description</p>
                            </div>
                        </div>
            
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var item in Model.Items){
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic " >
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/img/product/@item.PictureUrl">
                                    <input type="hidden" value="@item.CategoryId" id="item_category_id_@item.Id">
                                    <input type="hidden" value="@item.PictureUrl" id="item_picture_uri_@item.Id"/>
                                    <input type="hidden" value="@item.UnitPrice" id="item_price_@item.Id"/>
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a asp-action="Details" asp-controller="Shop" asp-route-Id = "@item.Id"><i class="fa fa-info"></i></a></li>
                                        @if(User.Identity.IsAuthenticated){
                                            <li><a style="cursor:pointer" class="add_to_cart" id="@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                            
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="product__item__text">
                            <h6 ><a id="item_name_@item.Id">@item.Name</a></h6>
                            <h5>$@item.UnitPrice.ToString("N2")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>