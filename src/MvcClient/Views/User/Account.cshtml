@model BuyerViewModel
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Hello @Model.buyer.FirstName</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <span>@Model.buyer.FirstName</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="hero" style="margin-top:110px">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="product__discount__item" style="margin-bottom:20px">
                    @if(Model.buyer.PictureUrl == null){
                            <div class="product__discount__item__pic set-bg" data-setbg="/img/user/default.png"  > 
                                <ul class="product__item__pic__hover">
                                    <input type="file" id="imgupload" style="display:none"/> 
                                    <li><a style="cursor:pointer" id="OpenImgUpload"><i class="fa fa-wrench"></i></a></li>
                                </ul>
                            </div>
                    }
                    else{ 
                            <div class="product__discount__item__pic set-bg" data-setbg="/img/user/@Model.buyer.PictureUrl"  > 
                                <ul class="product__item__pic__hover">
                                    <input type="file" id="imgupload" style="display:none"/> 
                                    <li><a style="cursor:pointer" id="OpenImgUpload"><i class="fa fa-wrench"></i></a></li>
                                </ul>
                            </div>
                    }
                        
                </div>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-3">
                <partial name="_MenuBar"/>
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div style="margin-left:20px">
                        <h3>Your account information</h3>
                    </div>
                    
                </div>
                <div class="row" style="margin-left:20px;margin-top:20px;margin-bottom:20px">
                    <div class="col-md-2">
                        <p>Username: </p>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.buyer.UserName</p>
                    </div>
                </div>
                <div class="row" style="margin-left:20px">
                    <div class="col-md-2">
                        Password: 
                    </div>
                    <div class="col-md-8">
                        *******
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</section>
