@model BuyerViewModel
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Hello @Model.buyer.FirstName</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <span>@Model.buyer.FirstName</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="hero" style="margin-top:110px">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="product__discount__item" style="margin-bottom:20px">
                    ///
                    @if(Model.buyer.PictureUrl == null){   
                            <div class="product__discount__item__pic set-bg" id="picture_buyer" data-setbg="/img/user/default.png"  > 
                                <ul class="product__item__pic__hover">
                                    <input type="file" id="imgupload" style="display:none"/> 
                                    <li><a style="cursor:pointer" id="OpenImgUpload"><i class="fa fa-wrench"></i></a></li>
                                </ul>
                            </div>
                    }
                    else{ 
                            <div class="product__discount__item__pic set-bg" id="picture_buyer" data-setbg="/img/user/@Model.buyer.PictureUrl"  > 
                                <ul class="product__item__pic__hover">
                                    <input type="file" id="imgupload" style="display:none"/> 
                                    <li><a style="cursor:pointer" id="OpenImgUpload"><i class="fa fa-wrench"></i></a></li>
                                </ul>
                            </div>
                    }
                        
                </div>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-3">
                <partial name="_MenuBar"/>
            </div>
            
                <div class="col-lg-9">
                        <partial name="_ValidationScriptsPartial" />

                    <form asp-action="Profile" asp-controller="User" method="POST">
                        <div class="row">
                            <div style="margin-left:20px">
                                <h3 style="font-weight: 600">Your Profile</h3>
                            </div>
                            
                        </div>
                        <div class="row contact_buyer">
                            <div class="col-md-2">
                                <p>First Name: </p>
                            </div>
                            <div class="col-md-4 contact__info">
                                <input asp-for="@Model.buyer.FirstName" disabled value="@Model.buyer.FirstName" />
                                <span style="color:red; font-style:italic" asp-validation-for="@Model.buyer.FirstName"></span>
                            </div>
                            <div class="col-md-2">
                                <p>Last Name: </p>
                            </div>
                            <div class="col-md-4 contact__info">
                                <input asp-for="@Model.buyer.LastName" disabled value="@Model.buyer.LastName" />
                                <span style="color:red; font-style:italic"  asp-validation-for="@Model.buyer.LastName"></span>
                            </div>
                        </div>

                        <div class="row contact_buyer">
                            <div class="col-md-4 contact__info">
                                <span>Phone: </span>
                                <input asp-for="@Model.buyer.PhoneNumber" disabled value="@Model.buyer.PhoneNumber" >
                                <span style="color:red; font-style:italic"  asp-validation-for="@Model.buyer.PhoneNumber"></span>
                            </div>
                            <div class="col-md-8 contact__info">
                                <span>Email: </span>
                                <input asp-for="@Model.buyer.Email" disabled value="@Model.buyer.Email" >
                                <span style="color:red; font-style:italic"  asp-validation-for="@Model.buyer.Email"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div style="margin-left:20px">
                                <h3 style="font-weight: 600">Your Address</h3>
                            </div>
                        </div>
                        <div class="row contact_buyer">
                            <div class="col-md-4 contact__info">
                                <span>Locality: </span>
                                <input asp-for="@Model.buyer.Address.Locality" disabled value="@Model.buyer.Address.Locality" >
                            </div>
                            <div class="col-md-8 contact__info">
                                <span>Street Address: </span>
                                <input asp-for="@Model.buyer.Address.StreetAddress" disabled value="@Model.buyer.Address.StreetAddress" >
                            </div>
                        </div>
                        
                        <div class="row contact_buyer">
                            <div class="col-md-4 contact__info">
                                <span>Country: </span>
                                <input asp-for="@Model.buyer.Address.Country" disabled value="@Model.buyer.Address.Country" >
                            </div>
                            <div class="col-md-4 contact__info">
                                <span>City</span>
                                <input asp-for="@Model.buyer.Address.City" disabled value="@Model.buyer.Address.City" />
                            </div>
                            <div class="col-md-4 contact__info">
                                <span>Postal Code</span>
                                <input asp-for="@Model.buyer.Address.PostalCode" disabled value="@Model.buyer.Address.PostalCode" />
                            </div>
                        </div>
                        <div class="row" style="float: right;margin: 20px 90px;">
                            <div>
                                <span style="cursor:pointer" class="primary-btn open_edit_user">Edit</span>
                                <span class="btn cancel" style="display:none;cursor:pointer">Cancel</span>
                                <button class="primary-btn save-change" style="display:none">Save</button>
                            </div>
                        </div>
                    </form>
                        
                </div>
                
                
                
            
            
        </div>
    </div>
    
</section>
